<form method="post" action="{{ path('servicios_delete', {'id': servicio.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ servicio.id) }}">
    <button class="btn btn-primary mb-4 btn-home">Borrar</button>
</form>
