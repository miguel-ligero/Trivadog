<div class="container">
    <h1>Detalles Tipo hospedaje</h1>

    <a class="btn btn-primary mb-4 btn-home" href="{{ path('tipohospedaje_index') }}">Volver</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipohospedaje.id }}</td>
